<% include ../partials/header %>
<div class="row">
  <div>
  <h1 style="text-align: center;">Edit Profile</h1>
</div>
<div>
  <div class="rwd-form">
    <form action="/users/<%= user._id %>?_method=PUT" method="POST">
      <div class="form-group">
      </br></br></br></br>
      <label for="username">Username:</label>
        <input
          class="form-control"
          type="text"
          name="username"
          value="<%= user.username %>"
          autocomplete="off"
          required
        />
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input
          class="form-control"
          type="email"
          name="email"
          value="<%= user.email %>"
          autocomplete="off"
          required
        />
      </div>

      <div class="form-group">
          <label for="biography">Biography:</label>
          <input
            class="form-control"
            type="text"
            name="biography"
            value="<%= user.biography %>"
            autocomplete="off"
          />
        </div>

      <div class="form-group">
        <label for="image">Your profile image:</label>
        <input class="form-control" type="text" name="image" value="<%= user.image %>" autocomplete="off" />
      </div>

      <div class="form-group">
        <label for="hometown">Hometown:</label>
        <input
          class="form-control"
          type="text"
          name="hometown"
          value="<%= user.hometown %>"
          autocomplete="off"
        />
      </div>


      Gender: <br>
        <select name="gender" >
            <optgroup label="Please Select A Gender:">
                <option value="" selected disabled hidden>Choose here</option>
                <option >Female</option>
                <option >Male</option>
                <option >Other</option>
            </optgroup>
        </select>
        <br><br>



      <div class="form-group">
        <button class="btn btn-md btn-primary btn-block">Update Profile</button>
      </div>
    </form>
    <hr />
    <a href="/password_reset">Reset password</a>
    <hr />
    <a href="/users/edit_profile/<%= user._id %>">Back</a>
  </div>
</div>
<% include ../partials/footer %>
