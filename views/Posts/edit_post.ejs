<% include ../partials/header %>
<div class="row">
    <div>
        <h1 style="text-align: center;">Edit Post</h1>
    </div>
    <div>
        <div class="rwd-form">
            <form action="/posts/<%= posts._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    </br></br></br></br>
                    <label for="title">Title</label>
                    <input class="form-control" type="text" name="title" value="<%= posts.title %>"
                        autocomplete="off" required />
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" value="<%= posts.description %>" autocomplete="off"
                        required />
                </div>

                <div class="form-group">
                    <label for="rating">Rating</label>
                    <input class="form-control" type="text" name="rating" value="<%= posts.rating %>"
                        autocomplete="off" />
                </div>

                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" value="<%= posts.location %>"
                        autocomplete="off" />
                </div>

                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" name="image" value="<%= posts.image %>" autocomplete="off" />
                </div>

                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Update Post</button>
                </div>
            </form>
            <hr />
            <a href="/posts/<%= posts._id %>">Back</a>
        </div>
    </div>
    <% include ../partials/footer %>